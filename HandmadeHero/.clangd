CompileFlags: 
  Add: 
    - -std=c++23
    - --target=x86_64-pc-windows-msvc
    - -fms-extensions
    - -fms-compatibility
    - -fdelayed-template-parsing
    - -DHANDMADE_SLOW=1
    - -DHANDMADE_INTERNAL=1
    - -isystem=C:\Program Files (x86)\Windows Kits\10\include\10.0.26100.0\ucrt
    - -isystem=C:\Program Files (x86)\Windows Kits\10\include\10.0.26100.0\um
    - -isystem=C:\Program Files (x86)\Windows Kits\10\include\10.0.26100.0\shared
    - -isystem=C:\Program Files\Microsoft Visual Studio\2022\Preview\VC\Tools\MSVC\14.44.34823\include   
    - -Icode
  Remove:
    - -W*
    - /W*

Diagnostics:
  Suppress:
    - unused-parameter
    - unused-variable
    - missing-field-initializers
    - microsoft-*
  
InlayHints:
  Enabled: true
  ParameterNames: true
  DeducedTypes: true

Hover:
  ShowAKA: true
